@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@using AssignmentsNetcore.Models.Database
@using Microsoft.AspNetCore.Identity
@model AssignmentsNetcore.Models.Views.UserManagementViewModel

<div class="component">
    <h3>@Localizer["Users"]</h3>
    <table class="width-450">
        <thead>
            <tr>
                <th>@Localizer["UserName"]</th>
                <th>@Localizer["Email"]</th>
                <th>@Localizer["Roles"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(model => user.UserName)</td>
                    <td>@Html.DisplayFor(model => user.Email)</td>
                    <td>@String.Join(",", user.Roles.Select(role => role.Name))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
