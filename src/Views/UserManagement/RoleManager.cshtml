@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@model AssignmentsNetcore.Models.Views.RoleManagerViewModel
@inject IViewLocalizer Localizer
<div class="component">
	<h3>@Localizer["RoleManager"]</h3>
	<div>
		<h4>@Localizer["Users"]</h4>
		@Html.ListBox("UserList", Model.UsersListItem, new { @class = "user-list" })
	</div>
	<div class="user-roles">
		<partial name="_UserRoles" model="Model"/>
	</div>
</div>
