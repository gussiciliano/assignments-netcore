@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@model AssignmentsNetcore.Models.Views.TrainingFormViewModel
@using AssignmentsNetcore.Models

@{
    ViewData["Title"] = "Edit";
}

<div class="component">
    <h2>@Localizer["Edit"]</h2>
    <h4>@Localizer["OptionTitleTraining"]</h4>
    <hr />
    <form asp-action="Edit" class="component-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">@Localizer["OptionTitleTech"]</label>
            <br>
            <select asp-for="TechId" 
                    asp-items="@Model.Techs"
                    class="box-dimension-200px-300px">
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">@Localizer["OptionTitleTab"]</label>
            <br>
            <select asp-for="TabId" 
                    asp-items="@Model.Tabs"
                    class="box-dimension-200px-300px">
            </select>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Individual" /> @Html.DisplayNameFor(model => model.Individual)
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input asp-for="Remote" /> @Html.DisplayNameFor(model => model.Remote)
                </label>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TrainingStatus" class="control-label"></label>
            <select asp-for="TrainingStatus" 
                    asp-items="Html.GetEnumSelectList<TrainingStatus>()"
                    class="box-dimension-200px-300px">
            </select>
            <span asp-validation-for="TrainingStatus" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
    <div>
        <a class="option-link" asp-action="Index">@Localizer["BackToList"]</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
