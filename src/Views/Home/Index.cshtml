@using AssignmentsNetcore.Models.Database
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization;
@inject IViewLocalizer Localizer
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = Localizer["HomePage"];
}
@if (SignInManager.IsSignedIn(User))
{
    <div class="display-flex-center flex-wrap">
        <div class="home-option">
            <h2>@Localizer["OptionTitleTech"]</h2>
            <i class="fas fa-microchip home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionTech"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="Tech" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="Tech" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
        <div class="home-option">
            <h2>@Localizer["OptionTitleOffice"]</h2>
            <i class="fas fa-building home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionOffice"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="Office" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="Office" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
        <div class="home-option">
            <h2>@Localizer["OptionTitlePerson"]</h2>
            <i class="fas fa-user-circle home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionPerson"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="Person" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="Person" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
        <div class="home-option">
            <h2>@Localizer["OptionTitleClient"]</h2>
            <i class="fas fa-comments-dollar home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionClient"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="Client" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="Client" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
        <div class="home-option">
            <h2>@Localizer["OptionTitleCommercial"]</h2>
            <i class="fas fa-cash-register home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionCommercial"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="Commercial" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="Commercial" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
        <div class="home-option">
            <h2>@Localizer["OptionTitleTraining"]</h2>
            <i class="fas fa-chalkboard-teacher home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionTraining"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="Training" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="Training" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
        <div class="home-option">
            <h2>@Localizer["OptionTitleProjectComponent"]</h2>
            <i class="fas fa-cogs home-option-icon"></i>
            <p class="home-option-description">@Localizer["OptionDescriptionProjectComponent"]</p>
            <div class="width-100-percent display-flex-around flex-direction-row">
                <a class="option-link" asp-area="" asp-controller="ProjectComponent" asp-action="Index">@Localizer["List"]</a>
                <a class="option-link" asp-area="" asp-controller="ProjectComponent" asp-action="Create">@Localizer["Create"]</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="talkbubble">
        <h1 class="logo-letter-left">@Localizer["Welcome"]</h1><h1 class="logo-letter">W</h1><h1 class="logo-letter color-wolox-green">-</h1><h1 class="logo-letter">ASS</h1><h1 class="logo-letter color-wolox-blue">I</h1><h1 class="logo-letter">GN!</h1>
        <h3>@Localizer["PleaseSignIn"]</h3>
    </div>
    
}
</div>