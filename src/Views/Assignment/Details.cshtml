@model AssignmentsNetcore.Models.Views.AssignmentViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Details";
}

<div class="component">
    <h2>@Localizer["Details"]</h2>
    <h4>@Localizer["OptionTitleAssignments"]</h4>
    @await Html.PartialAsync("_AssignmentDetailsData")
    <div class="margin-20-5">
        <a class="option-link margin-10-10" asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a>
        <a class="option-link margin-10-10" asp-action="Index">@Localizer["BackToList"]</a>
    </div>
</div>
