@model AssignmentsNetcore.Models.Views.AssignmentViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Details";
}

<div class="component">
    <h2>@Localizer["Details"]</h2>
    <h4>@Localizer["OptionTitleAssignments"]</h4>
    <h3>@Localizer["ConfirmDelete"]</h3>
    @await Html.PartialAsync("_AssignmentDetailsData")
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a class="option-link" asp-action="Index">@Localizer["BackToList"]</a>
    </form>
</div>
